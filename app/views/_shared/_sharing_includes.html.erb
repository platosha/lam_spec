  VK.init({apiId: <%= t("app_settings.vk_app_id") %>, onlyWidgets: true});
</script>
<script type="text/javascript">
var VK_likes_count = 0;
function VK_likes_process() {
  $('.vk-like').not('.vk-like_processed').each(function() {
    var like_id = 'vk_like_' + VK_likes_count;
    $(this).addClass('vk-like_processed').attr('id', like_id);
    VK.Widgets.Like(like_id, {pageUrl: $(this).data('url'), type: "button", height: 20});
    VK_likes_count++;
  });
}
jQuery(function($){ VK_likes_process(); });
</script>
